<div class="unit" tag="$!rulesubgroup.name">
	<div class="grouptop">
		<p class="small">rule</p>
		<p class="big">${rule.name}</p>
		<p class="normal">${rule.description}</p>
		<p class="normal">$!{rule.ruleLogic}</p>
	</div>
</div>
